@using YemekSepeti.Entities
@model List<YemekSepeti.WebUI.Models.SiparisListesiViewModel>

@if (TempData["Basari"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["Basari"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Hata"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Hata"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <h2 class="mb-4">Sipariş Geçmişim</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Henüz hiç siparişiniz bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Sipariş No</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>Tutar</th>
                            <th>Takip Kodu</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            // ID kısmında item.Siparis kullanıyoruz
                            var targetId = "collapse-" + item.Siparis.SiparisID;

                            <tr>
                                <td class="align-middle fw-bold">#@item.Siparis.SiparisID</td>
                                <td class="align-middle">@item.Siparis.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="align-middle">
                                    @* Durum Enum'ı senin SiparisDurumu.cs dosyanla eşleşir *@
                                    <span class="badge bg-secondary">@((SiparisDurumu)item.Siparis.Durum)</span>
                                </td>
                                <td class="align-middle fw-bold text-success">@item.Siparis.ToplamTutar.ToString("C2")</td>
                                <td class="align-middle"><code>@item.Siparis.TakipKodu</code></td>
                                <td class="align-middle">
                                    <button class="btn btn-sm btn-outline-primary"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#@targetId">
                                        Detaylar <i class="bi bi-chevron-down"></i>
                                    </button>

                                    @* TeslimEdildi ise Yorum Yap butonu göster *@
                                    @if (item.Siparis.Durum == (int)SiparisDurumu.TeslimEdildi)
                                    {
                                        <button class="btn btn-sm btn-warning ms-1"
                                                type="button"
                                                data-bs-toggle="modal"
                                                data-bs-target="#yorumModal"
                                                onclick="yorumModalAc(@item.Siparis.SiparisID)">
                                            <i class="bi bi-star-fill"></i> Yorum Yap
                                        </button>
                                    }

                                    @* İptal Et Butonu (Sadece 'Hazırlanıyor'dan önceki aşamalarda) *@
                                    @if (item.Siparis.Durum < (int)SiparisDurumu.Hazirlaniyor)
                                    {
                                        <form asp-controller="Siparis" asp-action="IptalEt" method="post" class="d-inline ms-1">
                                            <input type="hidden" name="siparisId" value="@item.Siparis.SiparisID" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Siparişi iptal etmek istediğinize emin misiniz?');">
                                                İptal Et <i class="bi bi-x-circle"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>

                            <tr>
                                <td colspan="6" class="p-0 border-0">
                                    <div class="collapse" id="@targetId">
                                        <div class="p-3 bg-light border-bottom">
                                            <h6 class="mb-2">Sipariş İçeriği</h6>
                                            <table class="table table-sm bg-white mb-0 border rounded">
                                                <thead>
                                                    <tr>
                                                        <th>Ürün Adı</th>
                                                        <th class="text-center">Adet</th>
                                                        <th class="text-end">Fiyat</th>
                                                        <th class="text-end">Ara Toplam</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var detay in item.Detaylar)
                                                    {
                                                        <tr>
                                                            @* DTO içindeki property isimlerini birebir kullanıyoruz *@
                                                            <td>@detay.UrunAd</td>
                                                            <td class="text-center">x @detay.Adet</td>
                                                            <td class="text-end">@detay.Fiyat.ToString("C2")</td>
                                                            <td class="text-end fw-bold">@detay.SatirToplam.ToString("C2")</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@* Yorum Modal - FORM İLE *@
<div class="modal fade" id="yorumModal" tabindex="-1" aria-labelledby="yorumModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/Yorum/Ekle" method="post" id="yorumForm">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title" id="yorumModalLabel">
                        <i class="bi bi-star-fill"></i> Yorum Yap & Puan Ver
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <!-- Gizli Inputlar -->
                    <input type="hidden" name="siparisId" id="yorumSiparisId" />
                    <!-- RestoranID Controller tarafında bulunacak, buradan göndermeye gerek yok -->
                    <input type="hidden" name="puan" id="secilenPuan" value="0" />

                    @* Puan Seçimi *@
                    <div class="mb-3">
                        <label class="form-label fw-bold">Puanınız</label>
                        <div class="star-rating" id="starRating">
                            <i class="bi bi-star fs-3 star-icon" data-value="1"></i>
                            <i class="bi bi-star fs-3 star-icon" data-value="2"></i>
                            <i class="bi bi-star fs-3 star-icon" data-value="3"></i>
                            <i class="bi bi-star fs-3 star-icon" data-value="4"></i>
                            <i class="bi bi-star fs-3 star-icon" data-value="5"></i>
                        </div>
                    </div>

                    @* Yorum Metni *@
                    <div class="mb-3">
                        <label for="yorumMetni" class="form-label fw-bold">Yorumunuz</label>
                        <textarea class="form-control" name="yorumMetni" id="yorumMetni" rows="4" placeholder="Deneyiminizi paylaşın..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-warning" id="btnYorumKaydet">
                        <i class="bi bi-send"></i> Gönder
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .star-rating .star-icon {
            cursor: pointer;
            color: #ccc;
            transition: color 0.2s;
        }
            .star-rating .star-icon:hover,
            .star-rating .star-icon.active {
                color: #ffc107;
            }
            .star-rating .star-icon.bi-star-fill {
                color: #ffc107;
            }
    </style>
    <script>
        // Modal açılırken verileri getir
        function yorumModalAc(siparisId) {
            $('#yorumSiparisId').val(siparisId);
            
            // Önce formu sıfırla
            $('#secilenPuan').val(0);
            $('#yorumMetni').val('');
            $('.star-icon').removeClass('bi-star-fill active').addClass('bi-star');
            $('#btnYorumKaydet').html('<i class="bi bi-send"></i> Gönder'); // Buton metni varsayılan

            // AJAX ile mevcut yorumu sorgula
            $.get('/Yorum/GetYorum?siparisId=' + siparisId, function (data) {
                if (data.exists) {
                    // Yorum varsa doldur
                    $('#secilenPuan').val(data.puan);
                    $('#yorumMetni').val(data.yorum);
                    
                    // Yıldızları boya
                    $('.star-icon').each(function () {
                        if ($(this).data('value') <= data.puan) {
                            $(this).removeClass('bi-star').addClass('bi-star-fill active');
                        }
                    });

                    // Buton metnini değiştir
                    $('#btnYorumKaydet').html('<i class="bi bi-pencil-square"></i> Güncelle');
                }
            });
        }

        // Yıldız tıklama (Sadece görsellik ve hidden input günceller)
        $(document).on('click', '.star-icon', function () {
            var value = $(this).data('value');
            $('#secilenPuan').val(value);

            // Tüm yıldızları güncelle
            $('.star-icon').each(function () {
                if ($(this).data('value') <= value) {
                    $(this).removeClass('bi-star').addClass('bi-star-fill active');
                } else {
                    $(this).removeClass('bi-star-fill active').addClass('bi-star');
                }
            });
        });

        // Form Submit kontrolü (Opsiyonel: Puan seçildi mi?)
        $('#yorumForm').on('submit', function (e) {
            var puan = $('#secilenPuan').val();
            if (puan == 0 || puan == "0") {
                e.preventDefault();
                alert("Lütfen bir puan seçin!");
            }
        });
    </script>
}