@model YemekSepeti.Entities.Urun

@{
    Layout = "~/Views/Shared/_RestoranLayout.cshtml";
    ViewData["Title"] = "Ürün Düzenle: " + Model.UrunAd;
}

<div class="container-fluid">
    <h3 class="mb-4">✏️ Ürün Düzenle</h3>

    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger">@TempData["Hata"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <i class="fas fa-edit me-2"></i> @Model.UrunAd - Bilgi Düzenleme
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <form asp-action="UrunDuzenle" asp-controller="RestoranPanel" method="post">
                        @Html.AntiForgeryToken()

                        @* Gizli alanlar *@
                        <input type="hidden" asp-for="UrunId" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        @* Ürün Adı *@
                        <div class="mb-3">
                            <label asp-for="UrunAd" class="form-label fw-bold">
                                <i class="fas fa-tag me-1"></i> Ürün Adı <span class="text-danger">*</span>
                            </label>
                            <input asp-for="UrunAd" class="form-control" />
                            <span asp-validation-for="UrunAd" class="text-danger"></span>
                        </div>

                        @* Açıklama *@
                        <div class="mb-3">
                            <label asp-for="Aciklama" class="form-label fw-bold">
                                <i class="fas fa-align-left me-1"></i> Açıklama
                            </label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>

                        <div class="row">
                            @* Fiyat *@
                            <div class="col-md-6 mb-3">
                                <label asp-for="Fiyat" class="form-label fw-bold">
                                    <i class="fas fa-lira-sign me-1"></i> Fiyat (₺) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Fiyat" class="form-control" type="number" step="0.01" min="0" />
                                <span asp-validation-for="Fiyat" class="text-danger"></span>
                            </div>

                            @* Stok *@
                            <div class="col-md-6 mb-3">
                                <label asp-for="Stok" class="form-label fw-bold">
                                    <i class="fas fa-boxes me-1"></i> Stok Adedi
                                </label>
                                <input asp-for="Stok" class="form-control" type="number" min="0" />
                                <span asp-validation-for="Stok" class="text-danger"></span>
                            </div>
                        </div>

                        @* Ürün Kategorisi *@
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-layer-group me-1"></i> Ürün Kategorisi <span class="text-danger">*</span>
                            </label>
                            <select asp-for="UrunKategoriID" class="form-select" asp-items="ViewBag.UrunKategorileri">
                                <option value="">-- Kategori Seçin --</option>
                            </select>
                            <span asp-validation-for="UrunKategoriID" class="text-danger"></span>
                        </div>

                        @* Fotoğraf URL *@
                        <div class="mb-3">
                            <label asp-for="FotoUrl" class="form-label fw-bold">
                                <i class="fas fa-image me-1"></i> Fotoğraf URL
                            </label>
                            <input asp-for="FotoUrl" class="form-control" placeholder="https://ornek.com/resim.jpg" />
                        </div>

                        @* Aktif Mi *@
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="AktifMi" class="form-check-input" type="checkbox" role="switch" />
                                <label class="form-check-label fw-bold" asp-for="AktifMi">
                                    Ürün Aktif (Müşterilere Görünsün)
                                </label>
                            </div>
                            <small class="text-muted">Pasif ürünler müşterilere gösterilmez.</small>
                        </div>

                        @* Butonlar *@
                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Güncelle
                            </button>
                            <a asp-action="Urunlerim" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>

                @* Sağ tarafta ürün önizleme *@
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <i class="fas fa-eye me-1"></i> Ürün Önizleme
                        </div>
                        <div class="card-body text-center">
                            @if (!string.IsNullOrEmpty(Model.FotoUrl))
                            {
                                <img src="@Model.FotoUrl" alt="@Model.UrunAd" 
                                     class="img-fluid rounded mb-3" style="max-height:200px;" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center rounded mb-3" 
                                     style="height:150px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                            <h5>@Model.UrunAd</h5>
                            <p class="text-muted small">@Model.Aciklama</p>
                            <h4 class="text-success">@Model.Fiyat.ToString("C2")</h4>
                        </div>
                    </div>

                    <div class="card mt-3 bg-light">
                        <div class="card-body">
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i> Eklenme: @Model.CreatedAt.ToString("dd.MM.yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
