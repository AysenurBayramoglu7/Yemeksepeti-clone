@model List<YemekSepeti.Entities.Urun>

@{
    Layout = "~/Views/Shared/_RestoranLayout.cshtml";
    ViewData["Title"] = "√úr√ºnlerim";
}

<div class="container-fluid">
    <h3 class="mb-4">üçî √úr√ºnlerim</h3>

    @if (TempData["Basarili"] != null)
    {
        <div class="alert alert-success">@TempData["Basarili"]</div>
    }

    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger">@TempData["Hata"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="fas fa-list me-2"></i>√úr√ºn Listesi</span>
            <a asp-action="UrunEkle" class="btn btn-success btn-sm">
                <i class="fas fa-plus me-1"></i> Yeni √úr√ºn Ekle
            </a>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>Hen√ºz √ºr√ºn eklenmemi≈ü. Yeni √ºr√ºn eklemek i√ßin yukarƒ±daki butonu kullanƒ±n.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
