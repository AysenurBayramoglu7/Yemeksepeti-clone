@model List<YemekSepeti.Entities.Yorum>

@{
    ViewData["Title"] = "Yorumlarım";
    Layout = "~/Views/Shared/_RestoranLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary mb-0">
        <i class="bi bi-chat-square-text-fill me-2"></i>Müşteri Yorumları
    </h2>
    <span class="badge bg-secondary fs-6">Toplam: @Model.Count Yorum</span>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        @if (Model.Count == 0)
        {
            <div class="text-center p-5">
                <i class="bi bi-chat-left-dots fs-1 text-muted mb-3"></i>
                <p class="fs-5 text-muted">Henüz hiç yorum almadınız.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Müşteri</th>
                            <th>Puan</th>
                            <th style="width: 50%;">Yorum</th>
                            <th class="text-end pe-4">Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var y in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">
                                    @(y.Kullanici != null ? $"{y.Kullanici.Ad} {y.Kullanici.Soyad}" : "Anonim Kullanıcı")
                                </td>
                                <td>
                                    <div class="text-warning">
                                        @for (int i = 0; i < y.Puan; i++)
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                        @for (int i = y.Puan; i < 5; i++)
                                        {
                                            <i class="fas fa-star text-muted" style="opacity: 0.3;"></i>
                                        }
                                        <span class="text-dark ms-1 small">(@y.Puan)</span>
                                    </div>
                                </td>
                                <td>
                                    <p class="mb-0 text-break">@y.YorumMetni</p>
                                </td>
                                <td class="text-end pe-4 text-muted small">
                                    @y.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
