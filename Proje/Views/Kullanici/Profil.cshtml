@model YemekSepeti.Entities.Kullanici

@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0 fw-bold text-primary">Hesap Bilgilerim</h4>
                </div>
                <div class="card-body p-4">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="Profil" method="post">
                        
                        <!-- Email (Değiştirilemez) -->
                        <div class="mb-4">
                            <label class="form-label text-muted small fw-bold">E-POSTA ADRESİ</label>
                            <input type="email" class="form-control bg-light" value="@Model.Email" readonly disabled />
                            <small class="text-muted">Güvenlik nedeniyle e-posta adresi değiştirilemez.</small>
                        </div>

                        <div class="row">
                            <!-- Ad -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ad" class="form-label fw-bold">Ad</label>
                                <input asp-for="Ad" class="form-control" placeholder="Adınız" />
                                <span asp-validation-for="Ad" class="text-danger"></span>
                            </div>

                            <!-- Soyad -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Soyad" class="form-label fw-bold">Soyad</label>
                                <input asp-for="Soyad" class="form-control" placeholder="Soyadınız" />
                                <span asp-validation-for="Soyad" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Telefon -->
                        <div class="mb-3">
                            <label asp-for="Telefon" class="form-label fw-bold">Telefon Numarası</label>
                            <input asp-for="Telefon" class="form-control" placeholder="05XX XXX XX XX" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>

                        <!-- Adres -->
                        <div class="mb-4">
                            <label asp-for="Adres" class="form-label fw-bold">Teslimat Adresi</label>
                            <textarea asp-for="Adres" class="form-control" rows="3" placeholder="Açık adresiniz..."></textarea>
                            <span asp-validation-for="Adres" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <!-- Kaydet Butonu -->
                            <button type="submit" class="btn btn-primary fw-bold px-5 py-2 rounded-pill">
                                Bilgileri Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Şifre Değiştirme Alanı (Yeni Kart) -->
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-danger">Güvenlik ve Şifre</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="SifreDegistir" method="post">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Mevcut Şifre</label>
                                <input type="password" name="eskiSifre" class="form-control" placeholder="******" required />
                                <span class="text-danger">@Html.ValidationMessage("eskiSifre")</span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Yeni Şifre</label>
                                <input type="password" name="yeniSifre" class="form-control" placeholder="******" required />
                                <span class="text-danger">@Html.ValidationMessage("yeniSifre")</span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Yeni Şifre (Tekrar)</label>
                                <input type="password" name="yeniSifreTekrar" class="form-control" placeholder="******" required />
                                <span class="text-danger">@Html.ValidationMessage("yeniSifreTekrar")</span>
                            </div>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-outline-danger fw-bold rounded-pill px-4">
                                Şifreyi Değiştir
                            </button>
                        </div>
                         <!-- Genel Validasyon Hataları -->
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("")) 
                        {
                             <div class="alert alert-danger mt-3 mb-0">
                                 <div asp-validation-summary="ModelOnly"></div>
                             </div>
                        }
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
