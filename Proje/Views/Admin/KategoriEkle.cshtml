@* Views/Admin/KategoriEkle.cshtml *@
@model YemekSepeti.Entities.Kategori

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h2><i class="fas fa-plus-circle"></i> Yeni Kategori Ekle</h2>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="KategoriEkle" method="post">

                @* BLL'den gelen hataları göstermek için *@
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                @* Kategori Adı *@
                <div class="mb-3">
                    <label asp-for="KategoriAd" class="form-label">Kategori Adı</label>
                    <input asp-for="KategoriAd" class="form-control" />
                    <span asp-validation-for="KategoriAd" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a asp-action="KategoriListesi" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>
