@* Views/Admin/RestoranEkle.cshtml *@
@model YemekSepeti.Entities.Restoran

@{
    ViewData["Title"] = "Yeni Restoran Ekle";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h2><i class="fas fa-plus-circle"></i> Yeni Restoran Ekle</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="RestoranEkle" method="post">

                @* BLL'den gelen hataları göstermek için *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @* Kategori ve Kullanıcı ID'leri geçici olarak gizli alanlarda tutulabilir veya dropdown ile seçilebilir *@

                @* **GEÇİCİ ÇÖZÜM** KategoriID ve KullaniciID için (Controller'da doldurmanız gerekecek) 
                
                <input type="hidden" asp-for="KullaniciID" value="1" />*@

                @* Restoran Adı *@
                <div class="form-group mb-3">
                    <label asp-for="RestoranAd" class="form-label"></label>
                    <input asp-for="RestoranAd" class="form-control" />
                    <span asp-validation-for="RestoranAd" class="text-danger"></span>
                </div>

                @* Adres *@
                <div class="form-group mb-3">
                    <label asp-for="Adres" class="form-label"></label>
                    <textarea asp-for="Adres" class="form-control"></textarea>
                    <span asp-validation-for="Adres" class="text-danger"></span>
                </div>

                @* Telefon *@
                <div class="form-group mb-3">
                    <label asp-for="Telefon" class="form-label"></label>
                    <input asp-for="Telefon" class="form-control" />
                    <span asp-validation-for="Telefon" class="text-danger"></span>
                </div>
                @*Dropdown için Artık kategori seçimini kullanıcı yapacak.*@
                <div class="mb-3">
                    <label class="form-label">Kategori</label>
                    <select asp-for="KategoriID" class="form-select" asp-items="ViewBag.Kategoriler">
                        <option value="">-- Kategori Seçin --</option>
                    </select>
                </div>
                <!-- Restoran Sahibi Dropdown -->
                <div class="mb-3">
                    <label class="form-label">Restoran Sahibi</label>
                    <select asp-for="KullaniciID" class="form-select" asp-items="ViewBag.Sahipler">
                        <option value="">-- Sahip Seçin --</option>
                    </select>
                    <span asp-validation-for="KullaniciID" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Kaydet" class="btn btn-success" />
                    <a asp-action="RestoranListesi" class="btn btn-secondary">Listeye Dön</a>
                </div>
               

            </form>
        </div>
    </div>
</div>