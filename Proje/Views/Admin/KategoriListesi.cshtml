@* Views/Admin/KategoriListesi.cshtml *@
@model List<YemekSepeti.Entities.Kategori>

@{
    ViewData["Title"] = "Kategori Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-list-alt"></i> Kategori Listesi</h2>
        <a asp-action="KategoriEkle" class="btn btn-danger">
            <i class="fas fa-plus"></i> Yeni Kategori Ekle
        </a>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="table-dark">
                <th>ID</th>
                <th>Kategori Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.KategoriID</td>
                    <td>@item.KategoriAd</td>
                    <td>
                        <a asp-action="KategoriDuzenle" asp-route-id="@item.KategoriID" class="btn btn-sm btn-info me-1">Düzenle</a>
                        <a asp-action="KategoriSil" asp-route-id="@item.KategoriID" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="3" class="text-center text-muted p-4">Henüz kayıtlı kategori bulunmamaktadır.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
