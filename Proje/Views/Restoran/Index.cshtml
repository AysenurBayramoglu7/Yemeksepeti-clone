@model List<YemekSepeti.Entities.Restoran>

<h2>@Model.Count restoran bulundu</h2>

<div class="row mt-4">

    @foreach (var r in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 restoran-card">

                <div class="position-relative">
                    <img src="@r.RestoranResimUrl" class="card-img-top restoran-img" />

                    @if (User.Identity.IsAuthenticated)
                    {
                        <button class="fav-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                    }
                </div>

                <div class="card-body">
                    <h5 class="card-title">@r.RestoranAd</h5>
                    <p class="text-muted">
                        ⏱ @r.OrtalamaSure dk • 🛒 Min: @r.MinSiparisTutar TL
                    </p>
                </div>

            </div>

        </div>
    }
</div>

