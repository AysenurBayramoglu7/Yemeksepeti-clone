@using YemekSepeti.WebUI.Models
@model RestoranDetayViewModel

<h2>@Model.Restoran.RestoranAd</h2>
<h4>Menü</h4>

@if (!Model.Urunler.Any())
{
    <p>Bu restoranda henüz ürün bulunmuyor.</p>
}
else
{
    <!-- ÜRÜNLERİ KATEGORİYE GÖRE GRUPLAMA -->
    @foreach (var kategori in Model.Kategoriler)
    {
        <h3 class="mt-4">@kategori.UrunKategoriAd</h3>
        <hr />

        <div class="row">
            @foreach (var u in Model.Urunler.Where(x => x.UrunKategoriID == kategori.UrunKategoriID))
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0">

                        <img src="@u.FotoUrl"
                             class="card-img-top"
                             style="height:180px; object-fit:cover;" />

                        <div class="card-body">
                            <h5 class="card-title">@u.UrunAd</h5>
                            <p class="text-muted">@u.Aciklama</p>

                            <div class="d-flex justify-content-between">
                                <strong>@u.Fiyat TL</strong>

                                    <button class="btn btn-primary btn-sm" onclick="sepeteEkle(@u.UrunId)">
                                        <i class="bi bi-plus"></i>
                                        Ekle
                                    </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}

<!-- MÜŞTERİ YORUMLARI BÖLÜMÜ -->
<div class="mt-5">
    <h4 class="mb-4">
        <i class="bi bi-chat-left-quote-fill text-warning"></i> Müşteri Yorumları
        @if (Model.Yorumlar.Any())
        {
            <span class="badge bg-secondary ms-2">@Model.Yorumlar.Count yorum</span>
        }
    </h4>

    @if (!Model.Yorumlar.Any())
    {
        <div class="alert alert-light border">
            <i class="bi bi-info-circle"></i> Henüz bu restoran için yorum yapılmamış. İlk yorumu siz yapabilirsiniz!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var yorum in Model.Yorumlar)
            {
                <div class="col-md-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <!-- Yıldızlar -->
                            <div class="mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= yorum.Puan)
                                    {
                                        <i class="bi bi-star-fill text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star text-warning"></i>
                                    }
                                }
                                <span class="ms-2 fw-bold">@yorum.Puan</span>
                            </div>

                            <!-- Kullanıcı Adı -->
                            <h6 class="card-subtitle mb-2 text-primary">
                                <i class="bi bi-person-circle"></i>
                                @(yorum.Kullanici?.Ad ?? "Anonim") @(yorum.Kullanici?.Soyad ?? "")
                            </h6>

                            <!-- Yorum Metni -->
                            <p class="card-text fst-italic">
                                "@yorum.YorumMetni"
                            </p>

                            <!-- Tarih -->
                            <small class="text-muted">
                                <i class="bi bi-calendar3"></i> @yorum.CreatedAt.ToString("dd.MM.yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function sepeteEkle(urunId) {
            $.post('/Sepet/Ekle', { urunId: urunId, adet: 1 }, function (response) {
                if (response.success) {
                    alert("Ürün sepete eklendi!");
                    $("#cartCount").text(response.sepetCount);
                    $("#cartCount").show(); // Eğer gizliyse göster
                } else {
                    alert("Hata: " + response.message);
                }
            });
        }
    </script>
}
