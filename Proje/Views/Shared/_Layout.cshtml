<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proje.styles.css" asp-append-version="true" />
</head>
<body style="padding-top: 5rem;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3 fixed-top">
            <div class="container-fluid">

                <!-- Logo ve Tagline -->
                <a class="navbar-brand d-flex flex-column align-items-start" asp-controller="Home" asp-action="Index" style="line-height: 1;">
                    <span class="fw-bold fs-3" style="color:#ff0066;">YemekSepeti</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    
                    <!-- Sol Menü: Sayfa İçi Linkler -->
                    <ul class="navbar-nav ms-4 me-auto">
                        <li class="nav-item">
                            <a class="nav-link fw-bold text-dark" href="#mutfaklar">Mutfaklar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold text-dark" href="#restoranlar">Restoranlar</a>
                        </li>
                    </ul>

                    <!-- Sağ Menü: Kullanıcı Durumuna Göre -->
                    <ul class="navbar-nav align-items-center">

                        @if (User.Identity.IsAuthenticated)
                        {
                            // Kullanıcı giriş yapmışsa görünecek menü 
                            <!-- Hesap Adı (Dropdown) -->
                            <li class="nav-item dropdown me-3">
                                <a class="nav-link dropdown-toggle text-dark fw-bold d-flex align-items-center gap-1" href="#" id="profileDropdown" data-bs-toggle="dropdown">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                      <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"/>
                                    </svg>
                                    @User.Identity.Name @*Cookie içinde saklanan kullanıcı adını Navbar’da yazar.*@
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                    <li><a class="dropdown-item" asp-controller="Kullanici" asp-action="Profil">Hesabım</a></li>
                                    <li><a class="dropdown-item" asp-controller="Siparis" asp-action="Index">Siparişlerim</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Kullanici" asp-action="CikisYap">Çıkış Yap</a></li>
                                </ul>
                            </li>

                            <!-- Favoriler -->
                            <li class="nav-item me-3">
                                <a class="nav-link text-dark" asp-controller="Favori" asp-action="Index" title="Favoriler">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                      <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.281 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                                    </svg>
                                </a>
                            </li>

                            <!-- Sepet -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Sepet" asp-action="Index" title="Sepetim">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-bag" viewBox="0 0 16 16">
                                      <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z"/>
                                    </svg>
                                </a>
                            </li>
                        }
                        else
                        {
                            //giriş yapmamış kullanıcılar için görünecek menü
                            <!-- Giriş Yap Button -->
                            <li class="nav-item me-2">
                                <a class="btn btn-white border fw-bold px-4" asp-controller="Kullanici" asp-action="GirisYap" style="border-radius: 8px;">Giriş Yap</a>
                            </li>
                            <!-- Kayıt Ol Button -->
                            <li class="nav-item">
                                <a class="btn text-white fw-bold px-4" asp-controller="Kullanici" asp-action="KayitOl" style="background-color: #ff0066; border-radius: 8px;">Kayıt Ol</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Proje - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
