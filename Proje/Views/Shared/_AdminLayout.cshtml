@*Admin panelinin iskeletini, menüsünü, üst barını ve Bootstrap bağlantılarını içerecektir.*@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yönetim</title>

    @* Bootstrap CSS ve Font Awesome (ikonlar için) *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    @* Temel stiller *@
    <style>
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40; /* Koyu Gri */
            color: white;
            padding-top: 56px; /* Navbar yüksekliği kadar boşluk */
        }
        .content {
            margin-left: 250px;
            padding: 20px;
            padding-top: 76px; /* Navbar yüksekliği kadar boşluk */
        }
        /* Küçük ekranlarda sidebar gizlenir */
        @@media (max-width: 992px) {
            .sidebar {
                display: none;
            }
            .content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>

    @* Üst Navbar (YemekSepeti, Admin Paneli, Çıkış Yap) *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">

            @* Yan menüyü açma butonu (Küçük ekranlar için) *@
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas">
                <span class="navbar-toggler-icon"></span>
            </button>

            @* Sol Üst Köşe: YemekSepeti & Admin Paneli *@
            <a class="navbar-brand me-auto" href="#">
                <span class="fw-bold text-danger">YemekSepeti</span> | <span class="text-white-50">Admin Paneli</span>
            </a>

            @* Sağ Üst Köşe: Çıkış Yap *@
            <ul class="navbar-nav">
                @* Güvenli Çıkış, KullaniciController'daki LogOut metoduna yönlendirilmelidir *@
                <li class="nav-item">
                    <form asp-controller="Admin" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>

    @* ANA YAPI *@
    <div class="d-flex">

        @* Sabit Yan Menü (Büyük Ekranlar) *@
        <div class="sidebar d-none d-lg-block">
            <h6 class="text-white p-3 border-bottom">İşlemler</h6>
            <div class="list-group list-group-flush">
                @* Ana Sayfa *@
                <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-chart-line me-2"></i> Yönetim Paneli
                </a>

                @* Restoran Yönetimi *@
                <a asp-controller="Admin" asp-action="RestoranListesi" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-store me-2"></i> Restoranlar
                </a>
                @* Kategori Yönetimi *@
                <a asp-controller="Admin" asp-action="KategoriListesi" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-list-alt me-2"></i> Kategoriler
                </a>
                @*Urunler yönetimi*@
                <a asp-controller="Admin" asp-action="UrunListesi" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-utensils"></i> Ürünler
                </a> @*fas fa-utensils*@
                <a asp-controller="Admin" asp-action="KullaniciListesi" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-user-cog me-2"></i> Kullanıcılar
                </a>
                
            </div>
        </div>

        @* İçerik Alanı *@
        <div class="content flex-grow-1">
            <h4 class="mb-4">@ViewData["Title"]</h4> @* Sayfa Başlığı *@
            @RenderBody()
        </div>
    </div>

    @* Mobil/Küçük Ekran İçin Yan Menü (Offcanvas) *@
    <div class="offcanvas offcanvas-start bg-dark" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title text-white" id="sidebarOffcanvasLabel">Yönetim Menüsü</h5>
            <button type="button" class="btn-close text-reset bg-light" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="list-group list-group-flush">
                <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white"><i class="fas fa-chart-line me-2"></i> Yönetim Paneli</a>
                <a asp-controller="Admin" asp-action="RestoranListesi" class="list-group-item list-group-item-action bg-dark text-white"><i class="fas fa-store me-2"></i> Restoranlar</a>
                <a asp-controller="Admin" asp-action="KategoriListesi" class="list-group-item list-group-item-action bg-dark text-white"><i class="fas fa-store me-2"></i> Kategoriler</a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white"><i class="fas fa-hamburger me-2"></i> Ürünler</a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white"><i class="fas fa-shopping-cart me-2"></i> Siparişler</a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-white"><i class="fas fa-user-cog me-2"></i> Kullanıcılar</a>
            </div>
        </div>
    </div>


    @* Bootstrap JS ve Kendi JS dosyanız *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

